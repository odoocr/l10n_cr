<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="OrderReceipt">
        <t t-jquery="div.pos-receipt-contact:first" t-operation="after">
          <t t-if="receipt.number_electronic">
            <div class="pos-receipt-center-align">
                  Clave: <br/>
                  <t t-esc="receipt.number_electronic.substring(0,25)"/><br/>
                  <t t-esc="receipt.number_electronic.substring(25,50)"/>
            </div>
            <div class="pos-receipt-center-align">
                  Consecutivo: <br/>
                  <t t-esc="receipt.number_electronic.substring(21,41)"/>
            </div>
          </t>
        </t>
        <t t-jquery="div.orderlines" t-operation="before">
            <t t-if="receipt.client">
                Cliente: <t t-esc="receipt.client" /><br />
                <t t-if="order.get_client().vat">
                    CÃ©dula: <t t-esc="order.get_client().vat" /><br />
                </t>
                <br/>
                <br/>
            </t>
        </t>
    </t>
