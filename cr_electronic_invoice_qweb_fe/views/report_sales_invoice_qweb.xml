                    body {
                        font-family: 'Droid Sans', Arial, sans-serif;
                        font-size:14px;
                    }

                .tble {
                width: 100%;
                }
                .tble-header {
                height: 35px;
                font-size: 14px;
                text-align: center;
                line-height: 34px;
                text-decoration: none;
                font-weight: bold;
                background:#222;
                color:#fff;
                }
                .box{
                border:1px solid #222 !important;
                border-width : 1px 1px 1px 1px;
                padding:2px 2px !important;
                text-align:center;
                }

                .boxsq{
                border:solid #333 !important;
                border-width:1px 1px 1px 1px !important;
                }

                .boxsq2{
                border:solid #333 !important;
                border-width:1px 1px 0px 1px !important;
                }
                .rcorners2{
                border-radius: 5px;
                border: 1px solid #333;
                padding:5px 5px 5px 5px;
                font-size: 16px;
                }
                .rounded1{
                color:#fff;
                border-radius: 8px;
                border:none;
                padding:5px 5px;
                background: #222;
                }
                .rounded2{
                border: 1px solid #ddd;
                padding:5px 5px;
                }
                .title{
                color:#222222;
                font-size:14px;
                font-weight:bolder;
                }
            </style>
        </div>
    </div>
</template>

