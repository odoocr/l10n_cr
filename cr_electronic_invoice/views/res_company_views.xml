								<field name="frm_ws_ambiente"  widget="radio"/>
								<field name="version_hacienda"  widget="radio"/>
            		<!--<field name="frm_tipo_id"/>-->
							</group>
						</group>
					</page>
				</xpath>



			</field>
		</record>
	</data>
</odoo>
